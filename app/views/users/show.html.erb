<h1>Show page for users_controller</h1>

<div class="container">
  <div class="show-page-card">
    <div class="show-page-photo-card">
      <%= image_tag @doctor.image_url %>
      <p></p>
      <h2><%= @doctor.first_name %> <%= @doctor.last_name %></h2>
      <p>Location</p>
      <a href="#" class="button">Profile</a>
