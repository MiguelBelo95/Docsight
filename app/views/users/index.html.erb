<div class="back-col">
 <div class= "text-center font">
      <h1>Select your prefered doctor</h1>
    </div>
  <div class="container disposition d-flex">
    <div class="wrap">
      <% @doctors.each do |user| %>
        <div class="box hover-effect">
          <%= link_to user_path(user) do %>
              <% full_name = "#{user.first_name} #{user.last_name}" %>
              <div class="box-top">
                <%= image_tag user.image_url, class: "shadow mb-3 p-3 bg-body rounded" %>
                <div class="title-flex alignment">
                  <h3 class="box-title"><%=full_name%></h3>
                  <p><%=user.locations.first.name%></p>
                  <span class="user-follow-info"><%=user.locations.first.address%></span>
                </div>
                <p class="description mb-3">
                <%= user.bio %>
                </p>
              </div>
              <div class="d-flex justify-content-center">
                <button class="button btn">See profile</button>
              </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>
